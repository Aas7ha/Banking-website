<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;900&family=Ubuntu:wght@300&display=swap" rel="stylesheet">
    <title>TSF Bank | Customers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="css/customers.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body id="title" >
    <header>
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg  " >
      
                <a class="navbar-brand" href="/" >TSF Bank</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                  <ul class="navbar-nav mr-auto">
    
                    <li class="nav-item">
                      <a class="nav-link" href="/transfers">Transaction History</a>
                    </li>
                  </ul>
                  
                </div>
               
              
             </nav>
             <hr class="style">
             
        </div>
        <div class="customers-list">
          <table>
              
              <thead>
                  <tr>
                      <th scope="col">Customer ID</th>
                      <th scope="col">Name</th>
                      <th scope="col">Email</th>
                      <th scope="col">Current Balance</th>
                      <th scope="col"></th>

                  </tr>
              </thead>
              <tbody style="font-size: 0.9rem;">
                  <% customers.forEach((customer) => { %>
                  <tr>
                    <td scope="row" data-label="Customer ID"><%= customer.id %></td>
                    <td data-label="Name"><%= customer.name %>
                    </td>
                    <td data-label="Email"><%= customer.email %></td>
                    <td data-label="Current Balance">â‚¹<%= customer.currentBalance %>
                    </td>
                    <td>
                      <a class="button" href="/customer/<%= customer._id %>">Transfer</a>
                          
                   </td>
                  </tr> 
                 <% }) %>
              </tbody>
          </table>
      </div>
        
    </header>
    <br><br><br>
    <footer id="footer"><br>
      <i class="social-icon fab fa-facebook-f"></i>
      <i class="social-icon fab fa-twitter"></i>
      <i class="social-icon fab fa-instagram"></i>
      <i class="social-icon fas fa-envelope"></i>
  
  
    </footer>
</body>
</html>